{
  "version": 2,
  "builds": [
    {
      "src": "website/package.json",
      "use": "@vercel/next",
      "config": { "distDir": ".next" }
    },
    {
      "src": "templates/sentinel-ai/package.json",
      "use": "@vercel/next",
      "config": { "distDir": ".next" }
    },
    {
      "src": "templates/portfolio-site/package.json",
      "use": "@vercel/next",
      "config": { "distDir": ".next" }
    },
    {
      "src": "templates/cloud-cost-optimization/package.json",
      "use": "@vercel/next",
      "config": { "distDir": ".next" }
    }
  ],
  "routes": [
    {
      "src": "/marketing-site(/?.*)",
      "dest": "website/$1"
    },
    {
      "src": "/sentinel-ai(/?.*)",
      "dest": "templates/sentinel-ai/$1"
    },
    {
      "src": "/portfolio-site(/?.*)",
      "dest": "templates/portfolio-site/$1"
    },
    {
      "src": "/cloud-cost-optimization(/?.*)",
      "dest": "templates/cloud-cost-optimization/$1"
    },
    {
      "src": "/",
      "status": 302,
      "headers": { "Location": "/marketing-site" }
    }
  ]
}